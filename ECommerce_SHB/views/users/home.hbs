<!-- Start Products of The Month -->
<section class="container py-5">
	<div class="row text-center pt-3 bg-light" style="border: 1px solid darkblue ;">
		<div class="col-lg-6 m-auto">
			<h1 class="">Products of The Month</h1>
			<p class="text-muted">
				A skillfully crafted product page helps guide customers toward the products they want to
				purchase and provides them with a variety of product options to choose from.
			</p>
		</div>
	</div>
	<div class="row">
		{{#each products}}
		<div class="col-12 col-md-3 col-xl-3 mt-5 text-center p-5">
			<div class="card border-0" style="width: 250px; height: 300px;">
				<a class="imgHover" onclick="checkQtyForSingleProduct('{{this._id}}')">
					{{!-- <a href="/order_placed"> href="/view_product/{{this._id}}"--}}
						<img src="/product-images/{{this.myimg.[0]}}" class="card-img-top"
							style="width: 100%; height: 280px;" alt="...">
					</a>
					<div class="card-body">
						<ul class="list-unstyled d-flex justify-content-between">
							<li>
								<i class="text-warning fa fa-star"></i>
								<i class="text-warning fa fa-star"></i>
								<i class="text-warning fa fa-star"></i>
								<i class="text-warning fa fa-star"></i>
								<i class="text-muted fa fa-star"></i>
							</li>
							<li class="text-muted text-right">Rs. {{this.price}}</li>
						</ul>
						<h5 class="card-title" style="font-weight: bold; font-size: medium;">{{this.name}}</h5>
						<h5 class="card-title" style="font-weight: lighter; font-size: medium;">{{this.[0].name}}</h5>
						<h5 class="card-title" style="font-weight:normal; font-size: medium;">{{this.description}} </h5>
						{{!-- <p class="card-text" style="font-weight: lighter; font-size: medium;">{{this.description}}
						</p> --}}
						<button class="btn" onclick="addToWishlist('{{this._id}}') ">
							<i class="fa-solid fa-heart text-success"></i></button>
						<button class="btn" onclick="addToCart('{{this._id}}') ">
							<i class="fa fa-fw fa-cart-arrow-down text-success"></i></button>

					</div>
			</div>

		</div>
		{{/each}}

	</div>
</section>

