<!-- Start Banner SHB -->
<div class="row mt-4">
	<div class="col-12 col-md-12 col-lg-12 col-xl-12">

		<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				{{#each banner}}
				<div class=" carousel-item {{#if @first}} active {{/if}}">
					<div style="height: 9em; background-size: cover;">
						<img class="img-fluid" src="/banner-images/{{this.bannerImg}}" alt="" width="100%" >
					</div>
					<div class=" d-flex align-items-center" style="z-index: 1;">
						<div class="text-align-left align-self-center text-white">
							<h1 class="ms-5 h1 text-success" id="banner_content"><b>SHB</b> eCommerce</h1>
							<h2 class="ms-5 h1" id="banner_content">{{this.header}}</h2>
							<h2 class="ms-5 h1" id="banner_content">{{this.content}}</h2>
						</div>
					</div>

				</div>
				{{/each}}

			</div>

			<a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel"
				role="button" data-bs-slide="prev">
				<i class="fas fa-chevron-left"></i>
			</a>
			<a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel"
				role="button" data-bs-slide="next">
				<i class="fas fa-chevron-right"></i>
			</a>
		</div>
	</div>
</div>
<!-- End Banner SHB -->
