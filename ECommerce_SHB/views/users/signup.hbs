<section class="signupPage">


    {{!-- <img src="/assets/img/shape.png" width="200em"> --}}

    <div class="row">

        <div class="col-md-4 m-auto divtrans editColor ">
            <div class="container  mt-5 pt-5">

                <h2 class="text-center">Register your account</h2>
                <form action="/register" method="post" id="mysignupform">
                <div class="progress" style="height: 2px;">
                    <div class="progress-bar bg-success" role="progressbar" id="progressID" aria-valuenow="25"
                        aria-valuemin="50" aria-valuemax="80"></div>
                </div>               
                    <div class="mb-3">
                        <label for="" class="form-label">Name</label>
                        <input type="text" class="form-control" id="namefield" name="name" value="{{name}}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="emailfield" 
                         aria-describedby="emailHelp" name="email">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        {{#if emailErr}}
                        
                        <script>
                            a = 10
                            const id = setInterval(function () {
                                a = a + 2
                                if (a == "80") clearInterval(id)
                                else
                                    document.getElementById('progressID').style.width = a + "%"
                            }, 20)
                            
                        </script> 
                        {{/if}}
                       <label style="color: red;" id="emailEr">{{emailErr}}</label>
                        
                    </div>
                    <label for="exampleInputEmail1" class="form-label">Mobile</label>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="mobilefield" name="mobile" value="{{mobile}}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" class="form-control" id="passwordfield" name="password">
                    </div>
                    <a href="/users/login" style="font-size:small; color: blue;">Allready have account ?</a>
                    <button type="submit"  class="btn btn-outline-primary" style="float:right;"> Register</button>
                </form>
                    
               

            </div>
        </div>
    </div>
</section>
<script>


    $(document).ready(function () {
        $("#mysignupform").validate({
            rules: {
                name: {
                    required: true,
                    lettersonly: true

                },
                email: {
                    required: true
                    
                },
                mobile: {
                    required: true,
                    number:true
                },

                password: {
                    required: true,
                    maxlength: 5
                }
            }
        })

    })
</script>