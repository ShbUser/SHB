<div class="container mt-5">
    <h2>Enter Delivery Details</h2><br>
    <form action="" id="checkout-form">
        <div class="row justify-content-md-center">
            <div class="col-md-4">

                <label for="inputEmail3" class="col-sm-2 col-form-label">Address</label>
                <input type="text" class="form-control" name="Address">

                <label for="inputPassword3" class="col-sm-2 col-form-label">Pincode</label>
                <input type="text" class="form-control" name="Pin">

                <label for="inputPassword3" class="col-sm-2 col-form-label">Mobile</label>
                <input type="text" class="form-control" name="Mobile">

                <input type="text" value="{{user._id}}" name="userId" hidden>



            </div>

            <div class="col-md-4 " style="border-style:dashed; ">

                <h5>Total amount: Rs. <span style="color: blue;font-size: x-large;">{{total}}/-</span></h5>
                <hr>
                <p>Payment Method</p>

                <label>
                    <input type="radio" name="payment-method" value="Online">
                    Card Payment
                </label>
                <br>
                <label>
                    <input type="radio" name="payment-method" value="COD" checked>
                    COD
                </label><br><br>


                <button type="submit" class="btn btn-primary" style="float: right;">Checkout</button>


            </div>

        </div>

    </form>
</div>

