<div class="container" style="margin-top: -35em;">
    <header>
        <div class="row  text-center">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <h4>SHB online hub Administrator</h4>
            </div>
        </div>

    </header>
    <hr>


    <section>
        <div class="row d-flex justify-content-center text-center bdrShdw">
            <div class="col-6 col-md-6 col-lg-6 col-xl-6">
                <form action="/admin/add-categories" method="post">
                <input type="text" class="form-control" id="cat_name" name="name" placeholder="Category" required>
                <input type="text" class="form-control" id="cat_name" name="description" placeholder="Description" required>
                <button type="submit" class="btn btn-success">Add Category</button>
                </form>

                <br><br>
                <table class="table mt-3" id="productsJS">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Category</th>
                            <th scope="col">Description</th>
                            <th scope="col"></th>   
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{this.Category}}</td>
                            <td>{{this.Descprition}}</td>
                            <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt="">
                            </td>
                            <td>
                                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('Are u want to delete {{this.Name}} ?')">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>
</section>
<script>
    $(document).ready(function () {
        $('#productsJS').DataTable();
    });
</script>