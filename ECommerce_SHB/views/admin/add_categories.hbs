<div class="container" style="margin-top: -35em;">
    <header>
        <div class="row  text-center">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <h4>SHB online hub Administrator</h4>
            </div>
        </div>

    </header>
    <hr>


    <section>
        <div class="row d-flex justify-content-center text-center bdrShdw">
            <div class="col-6 col-md-6 col-lg-6 col-xl-6">
                <form action="/admin/add-categories" method="post">
                    <input type="text" class="form-control" id="cat_name" name="name" placeholder="Category" required>
                    <input type="text" class="form-control" id="cat_name" name="description" placeholder="Description"
                        required>
                    <button type="submit" class="btn btn-success">Add Category</button>
                </form>

                
                <table class="table mt-3" id="productsJS">
                    <thead>
                        <tr>
                            <th scope="col">Category</th>
                            <th scope="col">Description</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each category}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td>
                                <a href="/admin/edit_category/{{this._id}}" class="btn btn-light">Edit <i
                                        class="fa-solid fa-file-pen"></i></a>
                                <a href="/admin/delete_category/{{this._id}}" class="btn btn-light"
                                    onclick="return confirm('Do u want to delete {{this.Name}} ?')">Delete<i
                                        class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>
</section>
<script>
    $(document).ready(function () {
        $('#productsJS').DataTable();
    });
</script>