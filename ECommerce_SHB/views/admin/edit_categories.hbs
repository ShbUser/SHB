<div class="container mt-5">

    <section>
        <div class="row d-flex justify-content-center text-center bdrShdw editColor ">
            <div class="col-3 col-md-3 col-lg-3 col-xl-3">

            </div>
            <div class="col-5 col-md-5 col-lg-5 col-xl-5" style="border: 1px solid darkblue ;">
                <form action="/admin/update-categories/{{categ._id}}" method="post" id="edit_category">
                    <h6 class="text-center">Edit Category</h6><br>
                    <input type="text" class="form-control" id="cat_name" name="name" placeholder="Category"
                        value="{{categ.name}}"><br>
                    <input type="text" class="form-control" id="cat_name" name="description" placeholder="Description"
                        value="{{categ.description}}">
                    <br>

                    <button type="submit" class="btn btn-outline-success"><i
                            class="fa-solid fa-cloud-arrow-up"></i>Update</button>
                </form>

            </div>


            <div class="col-4 col-md-4 col-lg-4 col-xl-4">


            </div>

        </div>

        <div class="row d-flex justify-content-center text-center bdrShdw mt-5 editColor">
            <div class="col-3 col-md-3 col-lg-3 col-xl-3">

            </div>
            <div class="col-5 col-md-5 col-lg-5 col-xl-5" style="border: 1px solid darkblue ;">
                <form action="/admin/update-sub-categories/{{categ._id}}" method="post" id="edit_sub_category">
                    <h6 class="text-center">Edit Sub Category</h6>
                    <br>
                    <input type="text" class="form-control" id="cat_name" name="name" placeholder="Category"
                        value="{{categ.name}}"><br>

                    <select class="form-select" aria-label="Default select example" name="subcategory">
                        <option></option>
                        {{#each categ}}
                        {{#each this}}
                        <option value="{{this.sub_id}}">{{this.subname}}</option>
                        {{/each}}
                        {{/each}}
                    </select><br>
                    <input type="text" class="form-control" id="sub_cat_name" name="editsubcategoryname"
                        placeholder="Sub category name for edit"><br>
                    <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-cloud-arrow-up"></i>Sub
                        Update</button>
                </form>
            </div>
            <div class="col-4 col-md-4 col-lg-4 col-xl-4">


            </div>

        </div>
    </section>
    <script>
        $(document).ready(function () {
            $("#edit_category").validate({
                rules: {
                    name: {
                        required: true
                    },
                    description: {
                        required: true
                    }
                }

            })

        })

        $(document).ready(function () {
            $("#edit_sub_category").validate({
                rules: {
                    editsubcategoryname: {
                        required: true
                    },
                    subcategory: {
                        required: true
                    }
                }

            })

        })


    </script>