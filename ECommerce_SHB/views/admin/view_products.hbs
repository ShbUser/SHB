<div class="container">
    <header>
        <div class="row  text-center">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <h4><span class="text-success">SHB</span> online hub Administrator</h4>
            </div>
        </div>

    </header>
   
    <hr>
    <div class="row">
        <div class="col-12 col-md-12 col-xl-12 offset-10 ">
                 <a href="/admin/add_products" class="btn btn-outline-success border-0"><i
                        class="fa-solid fa-file-circle-plus"></i>Add Products</a>
        </div>
    </div>

    <section>
        
        <div class="row d-flex justify-content-center bdrShdw">

            <div class="col-7 col-md-7 col-lg-9 col-xl-9 ">
                
                <table class="table-responsive" style="width: 68em;" id="productsJS" >
                    <thead class="bg-success text-center">
                        <tr>

                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Size</th>
                            <th scope="col">Quantity</th>
                            <th scope="col" style="width: 15em;">Description</th>
                            <th scope="col">Category</th>
                            <th>Image</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {{#each products}}
                        <tr>


                            <td>{{this.name}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.size}}</td>
                            <td>{{this.qty}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.category.[0].name}}</td>
                            <td><img style="width: 50px; height: 50px;" src="/product-images/{{this.myimg.[0]}}" class="rounded-circle" alt="image">
                            </td>
                            <td>
                                <a href="/admin/edit_products/{{this._id}}" class="btn btn-outline-success">Edit <i
                                        class="fa-solid fa-file-pen"></i></a>
                                <a href="/admin/delete_products/{{this._id}}" class="btn btn-outline-danger"
                                    onclick="return confirm('Are u want to delete {{this.Name}} ?')">Delete<i
                                        class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        $('#productsJS').DataTable();
    });
</script>