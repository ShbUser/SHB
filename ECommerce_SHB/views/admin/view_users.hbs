<div class="container ">
    <header>
        <div class="row  text-center">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <h4><span class="text-success">SHB</span> online hub Administrator</h4>
            </div>
        </div>

    </header>
    <hr>


    <section>
        <div class="row d-flex justify-content-center bdrShdw">
            <div class="col-7 col-md-7 col-lg-9 col-xl-9 ">
                <table class="table mt-3 text-center"  id="productsJS">
                    <thead class="bg-success ">
                        <tr>

                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile</th>

                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}

                        {{#if this.isBlock}}
                        <tr class="text-danger">                               
                        {{else}}                           
                        <tr class="text-success">
                         {{/if}}
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.mobile}}</td>
                            <td>
                                {{#if this.isBlock}}
                                <a href="/admin/unblock-user/{{this._id}}" class="btn btn-outline-danger "
                                    onclick="return confirm('Do u want to unblock  {{this.Name}} ?')">Un block?
                                    <i class="fa-solid fa-unlock"></i></a>
                                        {{else}}
                                <a href="/admin/block-user/{{this._id}}" class="btn btn-outline-success border-0 text-center"
                                    onclick="return confirm('Do u want to Block {{this.Name}} ?')">Block?
                                    <i class="fa-solid fa-lock"></i>
                                    </a>
                            
                            </td>
                        </tr>
                        {{/if}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>
<script>
    $(document).ready(function () {
        $('#productsJS').DataTable();
    });
</script>